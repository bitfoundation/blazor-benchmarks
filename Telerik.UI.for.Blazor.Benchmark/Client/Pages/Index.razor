@page "/"

<div class="container">
    <BitButton OnClick="IncreaseCounter">@($"Counter: {counter}")</BitButton>
</div>

<style>
    .container{
        display: flex;
        flex-direction: column;
        gap: 1rem;
        width: 300px;
    }
</style>

@code {
    int counter;

    void IncreaseCounter()
    {
        counter++;
    }
}