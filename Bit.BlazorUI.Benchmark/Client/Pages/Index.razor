@page "/"

<div class="container">
    <BitButton OnClick="IncreaseCounter">@($"Counter: {counter}")</BitButton>

    <BitCheckbox Label="Accept?"></BitCheckbox>

    <BitDatePicker Style="max-width: 350px"
                    AriaLabel="Select a date"
                    Placeholder="Select a date..." />

    <BitLabel For="label-input">A Label for An Input</BitLabel>
    <input type="text" name="label-input" id="label-input" />

    <BitProgressIndicator Label="Progress"
                            Description="Example progress"
                            BarHeight="20" />
</div>

<style>
    .container{
        display: flex;
        flex-direction: column;
        gap: 1rem;
        width: 300px;
    }
</style>

@code {
    int counter;

    void IncreaseCounter()
    {
        counter++;
    }
}